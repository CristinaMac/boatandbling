<p id="notice"><%= notice %></p>
<h1>Boats available in this Harbour </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th>Size</th>
      <th>Price per day</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @boats.each do |boat| %>
      <tr>
        <td><%= boat.name %></td>
        <td><%= boat.capacity %> passengers</td>
        <td><%= boat.size %> m.</td>
        <td><%= boat.price_per_day %></td>
           <td><%= link_to '+', boat_path(boat.id) %></td>

      </tr>
    <% end %>
  </tbody>
</table>


<p>Find me in app/views/bookings/index.html.erb</p>
